
CC=gcc
CFLAGS=-pipe -g -O2 -Wall -D__LINUX__
LD=gcc
LDFLAGS=

TARGET=libPlayerPRO

SRCS=MADDriver.source/MADDriver.Source/ByteSwap.c MADDriver.source/MADDriver.Source/DelayOutPut.c MADDriver.source/MADDriver.Source/Effects.c MADDriver.source/MADDriver.Source/Interrupt.c MADDriver.source/MADDriver.Source/Lin-PlugImport.c MADDriver.source/MADDriver.Source/Lin-alsa.c MADDriver.source/MADDriver.Source/MainDriver.c MADDriver.source/MADDriver.Source/MyDebugStr.c MADDriver.source/MADDriver.Source/OutPut8.c MADDriver.source/MADDriver.Source/TickRemover.c MADDriver.source/MADDriver.Source/UNIX-OSS.c MADDriver.source/MADDriver.Source/UNIX-esound.c MADDriver.source/MADDriver.Source/Win-FileUtils.c MADDriver.source/MADDriver.Source/realft.c

OBJS=$(SRCS:.c=.o)

LIBS=

all: $(TARGET)

$(TARGET): $(OBJS)
	$(LD) $(LDFLAGS) $(OBJS) $(LIBS) -o $(TARGET)
		 
clean:
	rm -f *.o $(TARGET)

install: all
	$(GIMPTOOL) --install-bin $(TARGET)

.c.o:
	$(CC) -c $(CFLAGS) $<

dds.o: dds.c ddsplugin.h dds.h misc.h
ddsread.o: ddsread.c ddsplugin.h dds.h dxt.h endian.h
ddswrite.o: ddswrite.c ddsplugin.h dds.h dxt.h endian.h imath.h mipmap.h
dxt.o: dxt.c dxt.h dxt_tables.h dds.h endian.h mipmap.h imath.h
mipmap.o: mipmap.c mipmap.h dds.h imath.h
misc.o: misc.c misc.h
